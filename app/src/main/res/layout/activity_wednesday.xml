<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wednesday"
            android:textSize="35sp"
            android:textColor="#E2FCE7" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal">
            <TextView
                android:text="@string/first_pair_called"
                style="@style/CalledStyle" />
            <TextView
                style="@style/ClassStyle"
                android:layout_width="wrap_content"
                android:text="" />
            <View style="@style/LineStyle"
                android:id="@+id/bline_wednesday_1"/>
            <TextView
                android:text="@string/second_pair_called"
                style="@style/CalledStyle"/>
            <TextView
                style="@style/ClassStyle"
                android:text="" />
            <View style="@style/LineStyle"
                android:id="@+id/bline_wednesday_2"/>
            <TextView
                android:text="@string/third_pair_called"
                style="@style/CalledStyle"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/ClassStyle"
                    android:text="" />
                <View style="@style/LineStyleWeek"
                    android:id="@+id/sline_wednesday_1"/>
                <TextView
                    style="@style/ClassStyle"
                    android:text="@string/wednesday_3" />
            </LinearLayout>
            <View style="@style/LineStyle"
                android:id="@+id/bline_wednesday_3"/>
            <TextView
                android:text="@string/fourth_pair_called"
                style="@style/CalledStyle"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/ClassStyle"
                    android:text="" />
                <View style="@style/LineStyleWeek"
                    android:id="@+id/sline_wednesday_2"/>
                <TextView
                    style="@style/ClassStyle"
                    android:text="@string/wednesday_4" />
            </LinearLayout>
            <View style="@style/LineStyle"
                android:id="@+id/bline_wednesday_4"/>
            <TextView
                android:text="@string/fifth_pair_called"
                style="@style/CalledStyle"/>
            <TextView
                style="@style/ClassStyle"
                android:text="@string/wednesday_5" />
            <View style="@style/LineStyle"
                android:id="@+id/bline_wednesday_5"/>
        </GridLayout>
    </LinearLayout>
    <Button style="@style/BackButton"
        android:id="@+id/button8"/>
</RelativeLayout>
</RelativeLayout>