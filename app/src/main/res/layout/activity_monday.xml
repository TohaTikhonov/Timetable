<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monday"
            android:textColor="#E2FCE7"
            android:textSize="35sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal">

            <TextView
                style="@style/CalledStyle"
                android:text="@string/first_pair_called" />

            <TextView
                style="@style/ClassStyle"
                android:layout_width="wrap_content"
                android:text="" />

            <View
                android:id="@+id/bline_monday_1"
                style="@style/LineStyle" />

            <TextView
                style="@style/CalledStyle"
                android:text="@string/second_pair_called" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/ClassStyle"
                    android:text="@string/monday_2" />

                <View
                    android:id="@+id/sline_monday_1"
                    style="@style/LineStyleWeek" />

                <TextView
                    style="@style/ClassStyle"
                    android:text="@string/monday_2" />
            </LinearLayout>

            <View
                android:id="@+id/bline_monday_2"
                style="@style/LineStyle" />

            <TextView
                style="@style/CalledStyle"
                android:text="@string/third_pair_called" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/ClassStyle"
                    android:text="@string/monday_2" />

                <View
                    android:id="@+id/sline_monday_2"
                    style="@style/LineStyleWeek" />

                <TextView
                    style="@style/ClassStyle"
                    android:text="@string/monday_2" />
            </LinearLayout>

            <View
                android:id="@+id/bline_monday_3"
                style="@style/LineStyle" />

            <TextView
                style="@style/CalledStyle"
                android:text="@string/fourth_pair_called" />

            <TextView
                style="@style/ClassStyle"
                android:text="@string/monday_4" />

            <View
                android:id="@+id/bline_monday_4"
                style="@style/LineStyle" />
        </GridLayout>
    </LinearLayout>
</RelativeLayout>