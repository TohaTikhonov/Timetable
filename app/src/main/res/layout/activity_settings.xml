<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/image_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/change_theme"
        android:scaleType="centerCrop"
        android:src="@drawable/electricity_black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/change_theme"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:columnCount="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/theme1"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/theme_alina"
                    android:onClick="updateAlina"
                    android:src="@drawable/alina_theme" />

                <ImageView
                    android:id="@+id/theme2"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/theme_loli"
                    android:onClick="updateLoli"
                    android:src="@drawable/loli_theme" />

                <ImageView
                    android:id="@+id/theme3"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/theme_storm"
                    android:onClick="updateElectricity"
                    android:src="@drawable/electricity_theme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/theme_alina"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/theme_loli"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/theme_storm"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/theme4"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/theme_noct"
                    android:onClick="updateIamgay"
                    android:src="@drawable/iamgay_theme" />

                <ImageView
                    android:id="@+id/theme5"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/theme_sasha"
                    android:onClick="updatePornhub"
                    android:src="@drawable/pornhub_theme" />

                <ImageView
                    android:id="@+id/theme6"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:contentDescription="@string/theme_satanism"
                    android:onClick="updateSatanism"
                    android:src="@drawable/satanism_theme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/theme_noct"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/theme_sasha"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/theme_satanism"
                    android:textColor="#ffffff" />
            </GridLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:text="@string/creators"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button4"
            style="@style/BackButton"
            android:layout_gravity="end"
            android:onClick="backDay" />
    </RelativeLayout>
</RelativeLayout>