<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/image_settings"
        android:src="@drawable/storm_black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:text="Выбор темы"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/theme1"
                android:layout_height="200dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:onClick="updateAlina"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:adjustViewBounds="true"
                android:src="@drawable/alina_theme"/>
            <ImageView
                android:id="@+id/theme2"
                android:layout_height="200dp"
                android:layout_width="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_columnWeight="1"
                android:onClick="updateLoli"
                android:src="@drawable/loli_theme"/>
            <ImageView
                android:id="@+id/theme3"
                android:layout_height="200dp"
                android:layout_width="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_columnWeight="1"
                android:onClick="updateElectricity"
                android:src="@drawable/storm_theme"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:text="Alina"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:text="Loli"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:text="Electricity"/>
            <ImageView
                android:id="@+id/theme4"
                android:layout_marginTop="8dp"
                android:layout_height="200dp"
                android:layout_width="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_columnWeight="1"
                android:onClick="updateIamgey"
                android:src="@drawable/noct_theme"/>
            <ImageView
                android:id="@+id/theme5"
                android:layout_height="200dp"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_columnWeight="1"
                android:onClick="updatePornhub"
                android:src="@drawable/sasha_theme"/>
            <ImageView
                android:id="@+id/theme6"
                android:layout_height="200dp"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_columnWeight="1"
                android:src="@drawable/f"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:text="Iamgay"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:text="Pornhub"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:text="F"/>
        </GridLayout>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creators"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="12dp"/>
    <Button style="@style/BackButton"
        android:onClick="backDay"
        android:id="@+id/button_settings" />
</RelativeLayout>
</RelativeLayout>